{
  "id": null,
  "title": "Shopster Application Dashboard",
  "tags": ["shopster", "ecommerce", "microservices"],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "panels": [
    {
      "type": "graph",
      "title": "Overall Request Rate",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[5m]))",
          "legendFormat": "Requests per second"
        }
      ],
      "lines": true,
      "bars": false,
      "points": false,
      "renderer": "flot",
      "yaxes": [
        {
          "label": "Requests/sec",
          "format": "short"
        },
        {
          "label": "",
          "format": "short"
        }
      ],
      "xaxis": {
        "show": true
      }
    },
    {
      "type": "graph",
      "title": "Error Rate by Service",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{status=\"500\"}[5m])",
          "legendFormat": "{{job}}"
        }
      ],
      "lines": true,
      "bars": false,
      "points": false,
      "renderer": "flot",
      "yaxes": [
        {
          "label": "Errors/sec",
          "format": "short"
        },
        {
          "label": "",
          "format": "short"
        }
      ],
      "xaxis": {
        "show": true
      }
    },
    {
      "type": "singlestat",
      "title": "Overall Availability",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 8
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 - (sum(rate(http_server_requests_seconds_count{status=\"500\"}[5m])) / sum(rate(http_server_requests_seconds_count[5m]))) * 100",
          "legendFormat": ""
        }
      ],
      "format": "percent",
      "prefix": "",
      "postfix": "%",
      "nullPointMode": "null",
      "valueFontSize": "80%",
      "decimals": 2
    },
    {
      "type": "singlestat",
      "title": "Average Response Time",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 8
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg(http_server_requests_seconds_sum / http_server_requests_seconds_count)",
          "legendFormat": ""
        }
      ],
      "format": "ms",
      "prefix": "",
      "postfix": "ms",
      "nullPointMode": "null",
      "valueFontSize": "80%",
      "decimals": 2
    },
    {
      "type": "graph",
      "title": "Latency by Service (95th percentile)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (job, le))",
          "legendFormat": "{{job}}"
        }
      ],
      "lines": true,
      "bars": false,
      "points": false,
      "renderer": "flot",
      "yaxes": [
        {
          "label": "Latency (seconds)",
          "format": "short"
        },
        {
          "label": "",
          "format": "short"
        }
      ],
      "xaxis": {
        "show": true
      }
    },
    {
      "type": "graph",
      "title": "Database Connections",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "max_over_time(pg_stat_database_numbackends[5m])",
          "legendFormat": "PostgreSQL Connections"
        },
        {
          "expr": "mongodb_connections{state=\"available\"}",
          "legendFormat": "MongoDB Available Connections"
        }
      ],
      "lines": true,
      "bars": false,
      "points": false,
      "renderer": "flot",
      "yaxes": [
        {
          "label": "Connections",
          "format": "short"
        },
        {
          "label": "",
          "format": "short"
        }
      ],
      "xaxis": {
        "show": true
      }
    }
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ],
    "time_options": [
      "5m",
      "15m",
      "1h",
      "6h",
      "12h",
      "24h",
      "2d",
      "7d",
      "30d"
    ]
  },
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "refresh": "5s",
  "schemaVersion": 16,
  "version": 1,
  "links": []
}
